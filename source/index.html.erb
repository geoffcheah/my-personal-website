<script>
  const workNavLink = document.getElementById('work-link')
  const swimmingNavLink = document.getElementById('swimming-link')
  const educationNavLink = document.getElementById('education-link')
  const educationBox = document.getElementById('education-content')
  const workBox = document.getElementById('work-content')
  const swimBox = document.getElementById('swim-content')
  const contentJobBox = document.querySelector('.content-job-box')

  workNavLink.addEventListener("click", (e) => {
    if (!workBox.classList.contains("hidden")) {
      swimBox.className = 'hidden'
      educationBox.className = 'hidden'
    } else if (educationBox.classList.contains("hidden")) {
      swimBox.classList.toggle('hidden')
      workBox.classList.toggle('hidden')
    } else if (swimBox.classList.contains("hidden")) {
      educationBox.classList.toggle('hidden')
      workBox.classList.toggle('hidden')
    }
  })

  swimmingNavLink.addEventListener("click", (e) => {
    if (!swimBox.classList.contains("hidden")) {
      educationBox.className = 'hidden'
      workBox.className = 'hidden'
    } else if (educationBox.classList.contains("hidden")) {
      workBox.classList.toggle('hidden')
      swimBox.classList.toggle('hidden')
    } else if (workBox.classList.contains("hidden")) {
      educationBox.classList.toggle('hidden')
      swimBox.classList.toggle('hidden')
    }
  })

  educationNavLink.addEventListener("click", (e) => {
    if (!educationBox.classList.contains("hidden")) {
      swimBox.className = 'hidden'
      workBox.className = 'hidden'
    } else if (workBox.classList.contains("hidden")) {
      swimBox.classList.toggle('hidden')
      educationBox.classList.toggle('hidden')
    } else if (swimBox.classList.contains("hidden")) {
      workBox.classList.toggle('hidden')
      educationBox.classList.toggle('hidden')
    }
  })

</script>







